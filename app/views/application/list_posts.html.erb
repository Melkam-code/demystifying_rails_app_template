<html>
<body>
   <div class="posts">
   <a href="/new_post">Create new post</a>
     <% posts.each do |post| %>
        <div class="post">
          <h2 class="title">
           <a href="/show_post/<%= post['id'] %>"><%= post['title'] %></a>
          </h2>

          <small class="meta">
           <span class="author">by <%= post['author'] %>
           <em class="created_at"><%= post['created_at'] %></em>
          </small>
        </div>
        <br />
        <a href="/edit_post/<%= post['id'] %>">Edit Post</a>
        <form method="post" action="/delete_post/<%= post['id'] %>" style='display: inline'>
            <input type="submit" value="Delete" />
        </form>
        <hr />
        <% end %>
   </div>
</body>
</html>